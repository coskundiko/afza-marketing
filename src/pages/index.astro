---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';

const features = [
  {
    title: 'DHI Hair Transplant',
    description: 'Direct Hair Implantation for natural-looking results with minimal scarring.',
    href: '/procedures/dhi'
  },
  {
    title: 'FUE Technique',
    description: 'Follicular Unit Extraction for precise, permanent hair restoration.',
    href: '/procedures/fue'
  },
  {
    title: 'Sapphire FUE',
    description: 'Advanced Sapphire blade technology for faster healing and better density.',
    href: '/procedures/sapphire'
  }
];
---

<Layout
  title="Afza Health Tourism - Premium Hair Transplant Services"
  description="Connect with top-rated hair transplant doctors in the USA. Expert DHI, FUE, and Sapphire techniques for natural-looking results."
>
  <Hero />

  <!-- Features Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Our Hair Transplant Procedures
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Choose from advanced techniques performed by experienced doctors
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {features.map((feature) => (
          <div class="bg-gray-50 rounded-lg p-6 hover:shadow-lg transition-shadow">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {feature.title}
            </h3>
            <p class="text-gray-600 mb-4">
              {feature.description}
            </p>
            <a
              href={feature.href}
              class="text-blue-600 hover:text-blue-700 font-medium inline-flex items-center"
            >
              Learn More
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Ready to Get Started?
      </h2>
      <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
        Schedule a consultation with our expert team today
      </p>
      <a
        href="/contact"
        class="inline-block bg-white text-blue-600 px-8 py-3 rounded-lg text-lg font-semibold hover:bg-blue-50 transition-colors shadow-lg"
      >
        Contact Us Today
      </a>
    </div>
  </section>
</Layout>